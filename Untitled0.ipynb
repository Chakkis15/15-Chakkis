finish_btn = widgets.Button(description="‡∏á‡∏≤‡∏ô‡πÄ‡∏™‡∏£‡πá‡∏à‡∏™‡∏¥‡πâ‡∏ô‡πÅ‡∏•‡πâ‡∏ß", button_style='info', layout=widgets.Layout(width='95%', height='40px'))

