header = widgets.HTML(f"{style}<div style='background-color: #FFF59D; padding: 15px; border-radius: 15px; text-align: center; border: 2px solid #FBC02D;'><h3>‡πÇ‡∏õ‡∏£‡πÅ‡∏Å‡∏£‡∏°‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏Å‡∏°</h3></div>")

# 2. Input widget
task_input = widgets.Text(placeholder="‡∏£‡∏∞‡∏ö‡∏∏‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏ó‡∏≥...", layout=widgets.Layout(width='95%'))

time_input = widgets.IntText(value=1, description="‡∏ô‡∏≤‡∏ó‡∏µ:", layout=widgets.Layout(width='50%'))

